<div class="main-header-banner">
    <div class="business-name">
        <a class="non-styled-link" href="/">
            <div class="logo"><i class="material-icons">whatshot</i></div>
            <div class="title">Peak Podcasting</div>
        </a>
    </div>
    <div class="link-container">
        <%= link_to "Home", root_path, class: "#{'active' if current_page? root_path}" %> 
        <% if @current_user %>
            <%= link_to "Logout", logout_path, class: "#{'active' if current_page? logout_path}" %>   
        <% else %>
            <%= link_to "Sign-up", signup_path, class: "#{'active' if current_page? signup_path}" %>  
            <%= link_to "Login", login_path, class: "#{'active' if current_page? login_path}" %>   
        <% end %>
    </div>
</div>